# ========================================
# Security Configuration - إعدادات الأمان
# ========================================

# JWT Secret Key - مفتاح JWT (مطلوب - 32 حرف على الأقل)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-CHANGE-THIS-IN-PRODUCTION

# Encryption Key - مفتاح التشفير (مطلوب)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-CHANGE-THIS

# ========================================
# CORS Configuration - إعدادات CORS
# ========================================

# Allowed Origins - النطاقات المسموح لها بالوصول (مفصولة بفاصلة)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ========================================
# Database Configuration
# ========================================

# Database URL with SSL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?sslmode=require

# ========================================
# Application Settings
# ========================================

# Environment (development/production)
ENVIRONMENT=production

# Debug Mode (False in production)
DEBUG=False

# Host and Port
HOST=0.0.0.0
PORT=8000

# ========================================
# LLM Configuration
# ========================================

# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key

# Model Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# ========================================
# X/Twitter Configuration
# ========================================

# X Suite Configuration
XSUITE_DEFAULT_HEADLESS=1

# ========================================
# Security Best Practices
# ========================================

# 1. Never commit .env file to git
# 2. Use strong, unique keys for JWT_SECRET_KEY and ENCRYPTION_KEY
# 3. Rotate keys regularly (every 3-6 months)
# 4. Use environment-specific .env files (.env.production, .env.development)
# 5. Enable SSL/TLS in production
# 6. Restrict ALLOWED_ORIGINS to your actual domains
# 7. Use strong database passwords
# 8. Enable database SSL connections
# 9. Keep all dependencies updated
# 10. Monitor logs for suspicious activity

# ========================================
# How to Generate Secure Keys
# ========================================

# JWT Secret Key:
# python -c "import secrets; print(secrets.token_urlsafe(64))"

# Encryption Key:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Random Password:
# python -c "import secrets; import string; print(''.join(secrets.choice(string.ascii_letters + string.digits + string.punctuation) for _ in range(32)))"
